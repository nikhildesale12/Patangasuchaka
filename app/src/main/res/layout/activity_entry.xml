<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".main.LoginActivity">

    <TextView
        android:id="@+id/method1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Method-1"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="@color/color1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/btn_shape_capsule" />


    <TextView
        android:id="@+id/method2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Method-2"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="@color/color1"
        android:layout_marginTop="30dp"
        android:layout_below="@id/method1"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/btn_shape_capsule" />

    <TextView
        android:id="@+id/method3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/method2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/color1"
        android:text="Method-3"
        android:textColor="@drawable/btn_shape_capsule"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!--   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>-->

    <TextView
        android:id="@+id/method4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="method4"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="@color/color1"
        android:layout_marginTop="30dp"
        android:layout_below="@id/method3"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/btn_shape_capsule" />

    <TextView
        android:id="@+id/method5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="method5"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="@color/color1"
        android:layout_marginTop="30dp"
        android:layout_below="@id/method4"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/btn_shape_capsule" />

    <TextView
        android:id="@+id/method6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="method6"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="@color/color1"
        android:layout_marginTop="30dp"
        android:layout_below="@id/method5"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/btn_shape_capsule" />

    <TextView
        android:id="@+id/method7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="method7"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="@color/color1"
        android:layout_marginTop="30dp"
        android:layout_below="@id/method6"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:textColor="@drawable/btn_shape_capsule" />

    <TextView
        android:id="@+id/method8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="method7"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="@color/color1"
        android:layout_marginTop="30dp"
        android:layout_below="@id/method7"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:textColor="@drawable/btn_shape_capsule" />

</RelativeLayout>