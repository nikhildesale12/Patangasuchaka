<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewHistory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="1.5dp"
    android:layout_marginBottom="1.5dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:id="@+id/headerSpecies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@id/searchViewSpecies"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/text_species_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:gravity="left"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="Species List"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.002"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/text_cm_list"
            android:layout_width="0dp"
            android:layout_weight="0.49"
            android:layout_height="wrap_content"
            android:text="Common Name"
            android:gravity="left"
            android:textSize="14sp"
            android:textColor="#000000"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="2dp"
            android:layout_marginLeft="2dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
