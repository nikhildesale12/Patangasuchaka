<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".patangasuchaka.fragment.HowItWorksFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/howitworks1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/howitworks1"
                android:textSize="16dp"
                android:fontFamily="serif"
                android:textColor="#000"/>

            <ImageView
                android:id="@+id/howitworksimage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/howitworks" />

            <TextView
                android:id="@+id/howitworks2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:fontFamily="serif"
                android:text="@string/howitworks2"
                android:textColor="#000" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>